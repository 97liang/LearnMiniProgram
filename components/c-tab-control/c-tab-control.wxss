/* components/c-tab-control/c-tab-control.wxss */
.tab-control {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  background-color: azure;
}

.tab-item {
  flex: 1;
  text-align: center;

}

.active {
  color: red;
}

.active .tab-text {
  padding: 10rpx 16rpx;
  border-bottom: 6rpx solid red;
}